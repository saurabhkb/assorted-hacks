#wrapper
	position: static
#create-event
	text-align: center;
	padding: 10px
.month-name
	margin-top: 40px;
	text-align: center
	color: rgb(30, 30, 30)
	font-size: 2em
	padding: 20px
	background: rgba(0, 180, 200, 0.2)
	border-radius: 4px
	border-style: solid
	border-color: rgba(0, 180, 200, 0.4)
	border-width: 1px 0
.month-content
	padding: 20px
.right-arr, .left-arr
	width: 0
	height: 0
	border-width: 10px
	border-style: solid
.right-arr
	border-color: transparent transparent transparent #0bf
.right-arr:HOVER
	border-color: transparent transparent transparent maroon
.left-arr
	border-color: transparent #0bf transparent transparent
.left-arr:HOVER
	border-color: transparent maroon transparent transparent
.bjqs-controls
	position: relative
	top: 10px
