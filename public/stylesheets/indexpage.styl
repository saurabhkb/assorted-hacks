@import('nib')
@import('rules.styl')
.indexpage
	padding: 0px;
	margin: 0;
	position: absolute
	top: 0
	right: 0
	left: 0
	bottom: 0
	background-image: url(https://s3.amazonaws.com/radiant-sky/bg.png)
#titlebar
	height: 10em;
	padding: 35px 35px 10px 35px;
#site-title a
	font-size: 2.5em;
	color: maroon;
	font-family: ubuntu;
	transition: color 0.15s ease-in 0
#site-title a:HOVER
	text-decoration: none
	color: #0bf
#signin, #signup
	position: absolute;
	top: 60px;
#signin a
	font-size: 1.3em;
	transition: color .15s ease-in 0;
	color: rgb(30, 30, 120)
#signin a:HOVER, #signup a:HOVER
	color: maroon;
	text-decoration: none;
#signup
	right: 50px;
#signin
	right: 130px;
#signupbox
	padding: 20px 20px 5px 20px;
	position: absolute;
	top: 250px;
	left: 100px
	border: 2px solid #00B7FF
	border-radius: 6px;
	margin: 10px
#quote-box
	position: absolute
	top: 320px
	right: 140px
	max-width: 50em
#quote
	font-weight: bold
#origin
	font-size: 0.8em
	color: rgb(100, 100, 100)
	float: right
	margin-right: 10px
th
	text-align: left;
	color: black;
.fieldname
	color: rgb(50, 50, 50);
	font-size: 0.9em;
	padding-left: 3px;
	text-align: left;

.bubble
	background-color:white;
	border:2px solid #00B7FF;
	line-height:1.3em;
	height: 180px;
	position:absolute;
	right: 100px;
	padding: 10px 0px 10px 0px;
	text-align:center;
	width:240px;
	border-radius: 10px;
	box-shadow:0 0 5px #888888;
	top: 95px;
	display: none;
	z-index: 9999;
.bubble-arrow
	border-color: transparent transparent white transparent;
	border-style: solid;
	border-width: 10px;
	height:0;
	width:0;
	position:absolute;
	top:-19px;
	right:40px;
.bubble-arrow-border
	border-color: transparent transparent #00B7FF transparent;
	border-style: solid;
	border-width: 10px;
	height:0;
	width:0;
	position:absolute;
	top:-22px;
	right:40px;
#signintable-title
	text-align: center;
#signintable
	margin: 0px auto;
.selected
	color: maroon;
#signuptable td
	padding-bottom: 10px;
::-webkit-scrollbar
	width: 11px
::-webkit-scrollbar-track
	border-left: thin solid rgb(220, 220, 220)
::-webkit-scrollbar-thumb
	background: rgb(190, 190, 190)
	border: thin solid rgb(150, 150, 150)
::-webkit-scrollbar-thumb:HOVER
	background: rgb(170, 170, 170)
	box-shadow: inset 0 0 5px rgba(110, 00, 0, 0.2)
	cursor: pointer
::-webkit-scrollbar-thumb:ACTIVE
	background: rgb(150, 150, 150)
	box-shadow: inset 0 0 5px rgba(110, 00, 0, 0.4)
