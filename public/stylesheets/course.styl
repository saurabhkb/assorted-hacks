#stream
	min-height: 50em
	border-radius: 3px
	border-top: 2px solid rgb(230, 230, 230)
#post-area
	margin-bottom: 10px
	display: none
#post-box
	width: 25em;
	height: 6em
.post-option-list
	font-size: 0.8em
.post-option
	font-size: 0.9em
	padding: 5px;
.instr-post
	border-left: 2px solid maroon
.post
	padding: 25px
	border-radius: 5px
	border-bottom: 1px dashed rgb(220, 220, 220);
	.post-author-img
		a
			img
				max-width: 80px
				max-height: 100px
				border-radius: 3px
	.post-date-time
		color: gray;
		font-size: 0.7em

	.post-content
		padding-top: 5px
		font-size: 0.8em
		color: rgb(40, 40, 40)
.post:HOVER
	background: rgba(0, 120, 240, 0.1)
#loading
	left: 630px;
	position: absolute
	padding: 20px
	color: maroon
#sorry-course-closed
	color: red
	padding: 10px
	width: 20em
	font-size: 1.3em
	font-weight: bold
	text-align: center;
	margin: 0px auto
	margin-top: 3em
.comment-opt
	cursor: pointer
.reply-sect
	margin-top: 10px
.reply-unit
	a
		img
			max-width: 35px
			max-height: 35px
			border-radius: 3px
	.reply-unit-text
		color: rgb(50, 50, 50)
		font-size: 0.75em
	table
		border-collapse: separate
		border-spacing: 10px 0
.add-reply-btn:HOVER
	img
		opacity: 1
